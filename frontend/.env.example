# EduPress Environment Variables

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/edupress_prod
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_characters
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_app_password

# Stripe Configuration (for international payments)
STRIPE_API_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payme Configuration (for Uzbekistan payments)
PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_MERCHANT_KEY=your_payme_merchant_key
PAYME_TEST_KEY=your_payme_test_key
PAYME_ALLOWED_IPS=185.8.212.184,185.8.212.185,217.29.66.102,217.29.66.103

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Application Configuration
APP_NAME=EduPress
APP_URL=https://yourdomain.com
SERVER_PORT=8080

# File Upload Configuration
UPLOAD_DIR=/var/uploads/edupress/
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/logs/edupress/application.log

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security Configuration
ENABLE_HTTPS=true
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password
